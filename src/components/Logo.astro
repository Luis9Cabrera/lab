---
interface Props {
  variant?: "nav" | "footer";
  className?: string;
}

const { variant = "nav", className = "" } = Astro.props;
---

<div class={`flex items-center gap-3 group ${className}`}>
  <div
    class={`relative transition-transform duration-300 group-hover:scale-105 ${variant === "nav" ? "w-16 h-16 sm:w-20 sm:h-20" : "w-12 h-12"}`}
  >
    <img
      src={`${import.meta.env.BASE_URL}logo-ven.png`}
      alt="Logo Venecia Laboratorio Clínico"
      class="w-full h-full object-contain"
      loading="eager"
      width={80}
      height={80}
    />
  </div>
  <div class="flex flex-col leading-tight">
    <span
      class={`font-bold tracking-tight ${variant === "nav" ? "text-xl sm:text-2xl text-primary" : "text-xl text-white"}`}
    >
      Venecia
    </span>
    <span
      class={`text-sm font-bold ${variant === "nav" ? "sm:text-base text-tertiary" : "text-secondary"}`}
    >
      Laboratorio Clínico
    </span>
  </div>
</div>
