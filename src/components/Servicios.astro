---
const { servicios } = Astro.props;
---

<section class="py-24 bg-white">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-16">Nuestros Servicios</h2>

    <div class="grid md:grid-cols-3 gap-10">
      {
        servicios.map((servicio: { titulo: unknown; descripcion: unknown }) => (
          <div class="bg-gray-50 p-8 rounded-2xl shadow hover:shadow-xl transition transform hover:-translate-y-2">
            <h3 class="text-xl font-semibold mb-4">{servicio.titulo}</h3>
            <p class="text-gray-600">{servicio.descripcion}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
