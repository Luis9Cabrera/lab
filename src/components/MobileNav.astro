---
import {
  Home,
  ClipboardList,
  PlusCircle,
  LayoutDashboard,
  MapPin,
} from "lucide-astro";
---

<div class="md:hidden fixed bottom-0 left-0 w-full z-50 px-4 pb-4">
  <div
    class="relative bg-primary rounded-[2.5rem] shadow-[0_-10px_40px_rgba(5,85,171,0.3)] flex justify-around items-center h-20 px-6 border border-white/10"
  >
    <!-- Navigation Items -->
    <a
      href={`${import.meta.env.BASE_URL}/#inicio`}
      class="flex flex-col items-center justify-center gap-1 group"
    >
      <div
        class="w-10 h-10 rounded-2xl flex items-center justify-center group-active:scale-90 transition-all text-white/70 group-hover:text-secondary group-active:text-secondary"
      >
        <Home class="w-6 h-6 outline-none" />
      </div>
      <span
        class="text-[10px] font-bold text-white/50 uppercase tracking-tighter"
        >Inicio</span
      >
    </a>

    <a
      href={`${import.meta.env.BASE_URL}/#estudios`}
      class="flex flex-col items-center justify-center gap-1 group"
    >
      <div
        class="w-10 h-10 rounded-2xl flex items-center justify-center group-active:scale-90 transition-all text-white/70 group-hover:text-secondary group-active:text-secondary"
      >
        <ClipboardList class="w-6 h-6 outline-none" />
      </div>
      <span
        class="text-[10px] font-bold text-white/50 uppercase tracking-tighter"
        >Estudios</span
      >
    </a>

    <!-- Central Featured Button (Agendar) -->
    <div class="relative -top-10">
      <div
        class="absolute inset-0 bg-secondary blur-2xl opacity-40 animate-pulse"
      >
      </div>
      <a
        href={`${import.meta.env.BASE_URL}/#agendar`}
        class="relative w-18 h-18 bg-secondary rounded-full flex items-center justify-center shadow-2xl border-4 border-primary group active:scale-90 transition-all"
      >
        <PlusCircle class="text-white w-9 h-9" stroke-width={2.5} />
      </a>
      <span
        class="absolute -bottom-6 left-1/2 -translate-x-1/2 text-[10px] font-black text-secondary uppercase tracking-widest whitespace-nowrap"
        >Agendar</span
      >
    </div>

    <a
      href={`${import.meta.env.BASE_URL}/#proceso`}
      class="flex flex-col items-center justify-center gap-1 group"
    >
      <div
        class="w-10 h-10 rounded-2xl flex items-center justify-center group-active:scale-90 transition-all text-white/70 group-hover:text-secondary group-active:text-secondary"
      >
        <LayoutDashboard class="w-6 h-6 outline-none" />
      </div>
      <span
        class="text-[10px] font-bold text-white/50 uppercase tracking-tighter"
        >Proceso</span
      >
    </a>

    <a
      href={`${import.meta.env.BASE_URL}/#sucursales`}
      class="flex flex-col items-center justify-center gap-1 group"
    >
      <div
        class="w-10 h-10 rounded-2xl flex items-center justify-center group-active:scale-90 transition-all text-white/70 group-hover:text-secondary group-active:text-secondary"
      >
        <MapPin class="w-6 h-6 outline-none" />
      </div>
      <span
        class="text-[10px] font-bold text-white/50 uppercase tracking-tighter"
        >Sedes</span
      >
    </a>
  </div>
</div>

<style>
  /* Semi-circle notch effect for the central button */
  .relative::before {
    content: "";
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 50px;
    background: transparent;
    pointer-events: none;
  }
</style>
